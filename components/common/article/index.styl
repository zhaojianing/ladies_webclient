@import '~@/assets/style/init';

.leaft-style, .right-style {
  margin-bottom: 20px;
  padding: 20px;

  .container-titleBox {
    .container-title {
      margin-bottom: 10px;
    }
  }

  .container-statistical {
    margin-top: 20px;

    .container-mg {
      margin-right: 10px;
    }

    .container-type {
      height: 20px;
      background-color: rgba(tag_bgc, 0.36);
      color: rgba(font_color, 0.8);
      padding: 2px 6px;
      font-size: 12px;
      line-height: 20px;
      border-radius: 4px;
    }

    .container-class {
      height: 20px;
      background-color: rgba(tag_mybgc, 0.36);
      color: rgba(tag_mycolor, 0.87);
      padding: 2px 6px;
      font-size: 12px;
      line-height: 20px;
      border-radius: 4px;
    }

    .container-left {
      text-align: left;
    }

    .container-right {
      float: right;
      text-align: right;
    }

    .container-init {
      display: inline-block;
    }
  }

  .container-content {
    height: 102px;
    width: 100%;
    position: relative;

    .container-imgBox {
      position: absolute;
      left: 0;
      top: 0;
      width: 160px;
      height: 100px;
      display: inline-block;
      background-color: #fff;
      border: 1px solid #333;
      border-radius: 4px;

      img {
        width: 100%;
        height: 100%;
      }
    }

    .container-mark {
      display: inline-block;
      width: calc(100% - 186px);
      margin-left: 180px;
      height: 102px;
    }
  }
}