.footer-box {
    width 100%
    height 80px
    background-color rgba(#282c35,0.6)
    z-index 2
    p {
        height 32px
        line-height 40px
        text-align center
        color rgba(255,255,255,0.6)
        .footer-link,a {
            text-decoration none
            color rgba(255,255,255,0.6)
        }
        .footer-link:hover,a:hover {
            color #fff
        }
    }
}