.content {
    background-position: center top;
    background-size: cover;
}
.content::after {
    background-image: url('~@/assets/images/banner.jpg');
    background-position: center top;
    background-size: cover;
    background-attachment: fixed;
    -webkit-filter: blur(20px);
    -moz-filter: blur(20px);
    -ms-filter: blur(20px);
    -o-filter: blur(20px);
    filter: blur(20px);
}
.header-box {
    width 100%
    .header-inner {
        display inline-block
        float right 
        padding-right: 40px;
    }
    .header {
        z-index 1
        width 100%
        height 60px !important
        line-height 60px
        background-color rgba(#282c35,0.6)
        position absolute
        .header-link {
            color rgba(255,255,255,.6)
            text-decoration none
            margin-right 16px
        }
        .header-logo {
            width 20px
            height 20px
            vertical-align middle
            margin-right 16px
            margin-left 40px
        }
        .ladies-leaft {
            float left    
            padding 0 0 0 10px
        }
        .ladies-right {
            float right
            padding 0 10px 0 0 
        }
        .search {
            height 30px    
        }
        
    }
    .header-banner {
        width 100%
        height 200px
        background-image url('~@/assets/images/banner.jpg')   
        background-repeat: no-repeat;
        background-size: 100% 100%;
    }
}
