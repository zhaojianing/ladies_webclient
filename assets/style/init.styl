// 公共部分
.font_color {
    color font_color    
}
.container-bg>p>img {
    background-color #ccc;
    width: 100%;    
}

// 留言背景色
.el-input-group__prepend {
    background-color vcm_bgc
    border none 
    color font_color
    border-radius 0
}
.el-input__inner,.el-textarea__inner {
    background-color: vcm_bgc; 
    border: 1px solid vcm_bgc;
    color font_color
    border-radius 0
}
.el-input__inner:hover {
    border-color: vcm_hover;
    border-radius 0
}
.vcmContainer .el-button {
    padding: 8px 14px
}
.vcmContainer .el-button {
    color: #ccc;
    background-color: vcm_bgc;
    border-color: vcm_bgc;
}
.el-message {
    height 4px !important;
}
pre {
    background: #000;
    overflow-y: auto;
}
.details {
    img {
      width: 100%;
    }
}

